
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using DA_MNLG.Models
@model PagedList.IPagedList<ChemicalparametersValidation>
@using PagedList.Mvc

<link href="~/Content/assets/css/PagedList.css" rel="stylesheet" />
<script src="~/Content/assets/Chonse/chosen.jquery.js"></script>
<link href="~/Content/assets/Chonse/chosen.css" rel="stylesheet" />

@if (TempData["msgSuccess"] != null)
{
    @Html.Raw(TempData["msgSuccess"])
}
@if (TempData["msgError"] != null)
{
    @Html.Raw(TempData["msgError"])
}



<div class="app-main__outer">
    <div class="app-main__inner">

        <div class="app-page-title">
            <div class="page-title-wrapper">
                <div class="page-title-heading">
                    <div class="page-title-icon">
                        <i class="pe-7s-id icon-gradient bg-grow-early">
                        </i>
                    </div>
                    <div>
                        THÔNG SỐ HÓA HỌC
                        <div class="page-title-subheading">
                        </div>
                    </div>
                </div>

            </div>
        </div>

        <div class="tab-content">
            <div class="row">
                <div class="card col-lg-12">
                    <div class="card-header">
                        <span class="m-l-auto">
                                <button type="button" id="btn-Export" class="btn btn-success m-l-auto"><i class="fa fa-file-excel-o">&nbsp;</i>&nbsp;Xuất File Excel</button>
                                <a class="modal fade" id="myModalimport" role="dialog" data-url='@Url.Action("ExportToExcel","Chemicalparameters")'></a>
                            </span>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover" id="table" width="100%" cellpadding="0">
                                <thead class="thead-light">
                                    <tr>
                                        <th width="30px">STT</th>
                                        <th> TPHH_C </th>
                                        <th> TPHH_Si </th>
                                        <th> TPHH_Mn </th>
                                        <th> TPHH_S </th>
                                        <th> TPHH_P </th>
                                        <th> TPHH_Ti </th>
                                        <th> TPHH_SiO2 </th>
                                        <th> TPHH_Al2O3 </th>
                                        <th> TPHH_CaO </th>
                                        <th> TPHH_MgO </th>
                                        <th> TPHH_TiO2 </th>
                                        <th> TPHH_Ri </th>
                                </thead>
                                <tbody>
                                    @{
                                        int pageno = (int)Model.PageNumber;
                                        int itemperpage = (int)Model.PageSize;
                                        int RowNo = ((pageno - 1) * itemperpage) + 1;
                                    }
                                    @foreach (var item in Model)
                                    {
                                    <tr>
                                        <td class="text-center"> @RowNo@{RowNo++;}</td>
                                        <td>@item.TPHH_C</td>
                                        <td>@item.TPHH_Si</td>
                                        <td>@item.TPHH_Mn</td>
                                        <td>@item.TPHH_S</td>
                                        <td>@item.TPHH_P</td>
                                        <td>@item.TPHH_Ti</td>
                                        <td>@item.TPHH_SiO2</td>
                                        <td>@item.TPHH_Al2O3</td>
                                        <td>@item.TPHH_CaO</td>
                                        <td>@item.TPHH_MgO</td>
                                        <td>@item.TPHH_TiO2</td>
                                        <td>@item.TPHH_Ri</td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                            <div class="pager">
                                @Html.PagedListPager(Model, page => Url.Action("Index", "Chemicalparameters", new { page }))
                                <span class="pageoff">Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <div id="layoutAuthentication_footer">
        <footer class="py-4 bg-light mt-auto">
            <div class="container-fluid">
                <div class="d-flex align-items-center justify-content-between small">
                    <div class="text-muted">Copyright &copy; Nhà máy luyện gang @DateTime.Now.Year</div>
                    <div>
                        <a href="https://www.hoaphat.com.vn/">Công ty CP Thép Hòa Phát Dung Quất</a>
                    </div>
                </div>
            </div>
        </footer>
    </div>


</div>
